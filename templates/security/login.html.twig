{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
    <style>
        #login-main {
            height: 80vh;
        }
        h1 {
            margin-top: 35px;
        }
        #login-btn {
            margin-top: 15px;
        }
    </style>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row justify-content-center" id="login-main">
        <div class="col-12 text-center">
            <h1>Connexion</h1>
        </div>

<div class="col-8">
    <div class="from-group">
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>

    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>
    <a href="{{ path('pass_change') }}">Mot de passe oublié?</a>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    </div>
    <div class="form-group text-center" id="login-btn">
        <button class="btn btn-primary" type="submit">
            Se connecter
        </button>
    </div>
    <div class="form-group text-center">
        <a href="/register"  style="text-decoration: none;">Créer un compte?</a>
    </div>
</div>
    </div>
</form>
{% endblock %}
